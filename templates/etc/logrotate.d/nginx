{{ nginx_log_root }}/*.log {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 0644 {{ nginx_user }} wcdevelop
        sharedscripts
        prerotate
                if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
                        run-parts /etc/logrotate.d/httpd-prerotate; \
                fi; \
        endscript
        postrotate
                [ ! -f {{ nginx_pidfile_path }} ] || kill -USR1 `cat {{ nginx_pidfile_path }}`
        endscript
}
